<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: Mall, State"
            style="@style/app_font"
            android:layout_alignParentStart="true"
            android:textColor="#ffffffff"
            />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date : 02-05-2015"
            style="@style/app_font"
            android:layout_alignParentEnd="true"
            android:textColor="#ffffffff"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:paddingTop="2sp"
        android:layout_marginTop="2sp">

        <TextView
            android:id="@+id/title_status"
            style="@style/rowStyle2"
            android:layout_width="2sp"
            android:text="Status"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/title_lname"
            style="@style/rowStyle2"
            android:layout_width="80sp"
            android:text="Name"
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/title_intime"
            style="@style/rowStyle2"
            android:layout_width="10sp"
            android:text="In Time"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/title_outtime"
            style="@style/rowStyle2"
            android:layout_width="12sp"
            android:text="Out Time"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/title_totalhours"
            style="@style/rowStyle2"
            android:layout_width="12sp"
            android:text="Total Hrs"
            android:textSize="12sp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="#b5b5b5"
        android:dividerHeight="1dp" />

</LinearLayout>