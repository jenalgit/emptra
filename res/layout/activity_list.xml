<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/activity_root_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/background50"
                android:textColor="@android:color/black"
        >

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:background="@drawable/activity_box"
            android:orientation="vertical"
            android:layout_margin="4dp">

        <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/activity_title"
                android:orientation="horizontal"
                android:layout_margin="1dp">

            <TextView
                    android:id="@+id/act_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="activity_status"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:gravity="center_vertical|center_horizontal"
                    />

                <TextView
                        android:id="@+id/act_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dip"
                        android:text="activity_date"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:layout_gravity="right|center_vertical"/>
                <TextView
                        android:id="@+id/act_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dip"
                        android:text="@string/activity_title"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:gravity="right|center_vertical|center_horizontal"
                        android:layout_gravity="center"/>
        </FrameLayout>
        <TextView
                android:id="@+id/act_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="5dip"
                android:text="@string/activity_desc"
                android:textAlignment="center"
                android:textSize="12sp"/>
        <TextView
                android:id="@+id/act_author"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="5dip"
                android:text="Author"
                android:textAlignment="center"
                android:textSize="12sp"/>
    </LinearLayout>
</RelativeLayout>