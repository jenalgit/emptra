<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/search_form_lyt"
                  android:layout_width="match_parent"
                  android:layout_height="fill_parent"
                  android:orientation="vertical">
        <TextView
                android:id="@+id/srchTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="12dip"
                android:text="@string/search_title"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal"
                android:background="@color/background50"/>

        <EditText
                android:id="@+id/srch_empid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="number"
                android:hint="@string/search_empid"
                android:labelFor="@string/search_empid"/>

        <EditText
                android:id="@+id/srch_empname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="9"
                android:hint="@string/search_name"
                android:labelFor="@android:integer/config_longAnimTime"/>

        <Button
                android:id="@+id/srch_button"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:text="@string/search_button"
                android:drawableEnd="@drawable/icon_search"
                android:layout_margin="6dp"
                android:drawablePadding="1dp"
                />



        <TextView
                android:id="@+id/search_result_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/msg_box"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="10dp"
                android:padding="12sp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:gravity="start"
                android:visibility="invisible"/>

        <TextView
                android:id="@+id/search_atnd_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Attendance Report"
                android:textColor="@color/color_app_theme"
                android:textSize="14sp"
                android:padding="12sp"
                android:gravity="start"
                android:visibility="invisible"/>

        <ListView
                android:id="@+id/search_atnd_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="#b5b5b5"
                android:dividerHeight="1dp" />

    </LinearLayout>

</ScrollView>