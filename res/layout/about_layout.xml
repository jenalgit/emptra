<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/perf_form_lyt"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <TextView
            android:id="@+id/perf_about"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_about_summary"
            android:textColor="@android:color/black"
            android:gravity="start"
            android:padding="10sp"
            />

    <TextView
            android:id="@+id/perf_uaTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_user_agreement"
            android:textColor="@android:color/black"
            android:gravity="start"
            android:padding="10sp"/>

    <TextView
            android:id="@+id/perf_ua"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_user_agreement_summary"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:gravity="start"
            android:padding="10sp"/>

</LinearLayout>